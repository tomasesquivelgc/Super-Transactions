<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "bg-customGray-100 h-screen" }) do |f| %>

  <header>
    <nav class="bg-gradient-to-b from-customBlue to-customBlueDark">
      <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
        <div class="relative flex h-16 items-center justify-between big">

          <%= link_to home_splash_path, class: 'block' do %>
            <%= image_tag('icons/arrow_left.svg', class: 'w-6 h-6 sm:hidden') %>
          <% end %>

          <div class="absolute inset-y-0 left-1/2 transform -translate-x-1/2 flex items-center justify-center sm:hidden">
            <span class="text-white text-lg font-medium">REGISTER</span>
          </div>

          <div class="actions text-white">
            <%= f.submit "Next" %>
          </div>

        </div>
      </div>
    </nav>
  </header>

  <div class="bg-white mt-5 divide-y border-2 text-customGray-500">

    <div class="field flex items-center">
      <img src="https://media.istockphoto.com/id/1337144146/vector/default-avatar-profile-icon-vector.jpg?s=612x612&w=0&k=20&c=BIbFwuv7FxTWvh5S3vB6bkT0Qv8Vn8N5Ffseq84ClGI=" alt="empty-avatar" class="h-16">
      <p>Upload picture</p>
    </div>

    <div class="field">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Full name", class: "w-full border-none p-3" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "w-full border-none p-3" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "w-full border-none p-3" %>
    </div>

  </div>

<% end %>
<%= render "devise/shared/error_messages", resource: resource %>
