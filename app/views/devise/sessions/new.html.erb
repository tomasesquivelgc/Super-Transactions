<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "bg-customGray-100 h-screen flex flex-col text-center" }) do |f| %>

  <header>
    <nav class="bg-gradient-to-b from-customBlue to-customBlueDark">
      <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
        <div class="relative flex h-16 items-center justify-between big">

          <%= link_to home_splash_path, class: 'block' do %>
            <%= image_tag('icons/arrow_left.svg', class: 'w-6 h-6 sm:hidden') %>
          <% end %>

          <div class="absolute inset-y-0 left-1/2 transform -translate-x-1/2 flex items-center justify-center sm:hidden">
            <span class="text-white text-lg font-medium">LOGIN</span>
          </div>

          <div class="actions text-white">
            <%= f.submit "Log In" %>
          </div>

        </div>
      </div>
    </nav>
  </header>

  <div class="bg-white mt-5 divide-y border-2 text-customGray-500">
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "w-full border-none p-3" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "w-full border-none p-3" %>
    </div>

  </div>
  <a href="/users/password/new" class="text-customGray-500 mt-5">Forgot password?</a>
<% end %>
